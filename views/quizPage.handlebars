</div>

{{#if comments.length}}
  <div class="col-md-12 mt-4 comment-list c-box">
    <h3 class="text-center">Comments</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      
      <div class="col-md-9 text-left">
        <p>
          {{comment.description}}
        </p>
      </div>

      <div class="col-md-2">
        <p>{{comment.user_name}} on {{format_date comment.date_created}}</p>
      </div>
            
      {{#if author}}
      <div class="col-md-1">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
      {{/if}}
  
    </div>
    {{/each}}
  </div>
{{/if}}








